    <!-- VISTA KANBAN -->
    <record id="view_ventas_cliente_kanban" model="ir.ui.view">
        <field name="name">view.ventas.producto.kanban</field>
        <field name="model">ventas.producto</field>
        <field name="arch" type="xml">
          <kanban class="o_ventas_cliente_kanban">

            <field name="name"/>
            <field name="cantidad"/>
            <field name="valor"/>
            <field name="preciofinal"/>
           
            
            <templates>
              <t t-name="kanban-box">
                <div t-attf-class="oe_kanban_global_click">
                  <div class="o_kanban_image">
                    <img alt="Perfil" t-att-src="kanban_image('ventas.venta', 'image', record.id.raw_value)"/>
                  </div>
                  <div class="oe_kanban_details">

                    <strong class="o_kanban_record_title">
                      <field name="name"/>
                      <field name="valor"/>
                    </strong>
                    <div t-if="record.date.value">
                      <t t-esc="record.date.value"/>
                    </div>
                    <div t-if="record.type.value">
                      <t t-esc="record.type.value"/>
                    </div>
                  </div>
                </div>
              </t>
            </templates>
          </kanban>
        </field>
      </record>




           <!-- Creo la raiz (una sola vez) -->
       <menuitem name="Ventas" id="ventas.menu_root"/>
        <!-- Creo el menu producto  -->
       <menuitem name="producto" id="ventas.menu_producto" parent="ventas.menu_root"
              action="ventas.producto_action_window"/>
    </data>
</odoo>
<odoo>
    <data>
        <!-- PRUEBA -->


        <!-- Creo Mi listado -->
        <record model="ir.ui.view" id="ventas.producto_list">
            <field name="name">producto list</field>
            <field name="model">ventas.producto</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="nombre"/>
                    <field name="descripcion"/>
                    <field name="stock"/>
                    <field name="stock_critico"/>
                    <field name="impuesto"/>
                    <field name="precio_unitario"/>
                    <field name="preciofinal"/>
           
                </tree>
            </field>
        </record>
           <!-- Creo la accion que va a ejecutar el menu -->

        <record model="ir.actions.act_window" id="ventas.producto_action_window">
            <field name="name">Compras y Facturas </field>
            <field name="res_model">ventas.producto</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <!-- Creo la accion del servidor -->
       

           <!-- Creo la raiz (una sola vez) -->
       <menuitem name="Ventas" id="ventas.menu_root"/>
        <!-- Creo el menu producto  -->
       <menuitem name="Lista de productos" id="ventas.menu_producto" parent="ventas.menu_root"
              action="ventas.producto_action_window"/>
              
    </data>
</odoo>
<odoo>
  <data>
   <report id="boleta"
   string="Imprimir Factura"
   model="ventas.ordencompra"
   report_type="qweb-pdf"
   name="ventas.report_ventas_template"
   />

   <template id="report_ventas_template">
    <t t-call="web.html_container">

      <t t-foreach="docs" t-as="o">
         <div class="header"> 
         </div>

         <div class="page"> 
         
                <h1>Boleta y/o Factura</h1> 
                <h2>Fecha de emisi√≥n</h2>
                <p><span t-field="o.fecha"/></p>
                <h2>Fecha limite a pagar</h2>
                <p><span t-field="o.fecha_limite"/></p>
                <h2>Datos del cliente</h2>
                <p><span t-field="o.cliente"/></p>
                <h2>Total a pagar</h2>
                <p><span t-field="o.total"/></p>
                <h2>Impuesto del producto</h2>
                <p><span t-field="o.impuesto"/></p>
                <h2>Validez</h2>
                <p>Precio: <span t-field="o.validez"/></p>
                <p>Iva: <span t-field="o.id_detalle_orden_compra"/></p>
               

         </div>

         <div class="footer"> 
         </div>
      </t>
    </t>
   </template>

  </data>
</odoo>
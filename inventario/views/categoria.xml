<odoo>
    <data>

        <!-- LISTA  -->
        <record model="ir.ui.view" id="inventario.categoria_list">
            <field name="name">Lista de categorias</field>
            <field name="model">inventario.categoria</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="nombre"/>
                    <field name="descripcion"/>
                </tree>
            </field>
        </record>

        <!-- ACCION CLICK QUE MUESTRA MENU -->
        <record model="ir.actions.act_window" id="inventario.categoria_action_window">
            <field name="name">Listado de categorias</field>
            <field name="res_model">inventario.categoria</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- ACCION SERVER -->
        <record model="ir.actions.server" id="inventario.categoria_action_server">
            <field name="name">categoria server</field>
            <field name="model_id" ref="model_inventario_categoria"/>
            <field name="state">code</field>
            <field name="code">

        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
            </field>
        </record>

        <!-- RAIZ INVENTARIO -->
        <menuitem name="inventario" id="inventario.menu_root"/>

        <!-- MENU CATEGORIA -->
        <menuitem name="categoria" id="inventario.menu_categoria" parent="inventario.menu_root" action="inventario.categoria_action_window"/>

    </data>
</odoo>
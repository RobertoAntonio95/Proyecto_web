<odoo>
    <data>

        <!-- LISTA PRODS -->
        <record model="ir.ui.view" id="inventario.detalle_presupuesto_list">
            <field name="name">Lista de detalles de presupuesto</field>
            <field name="model">inventario.detalle_presupuesto</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="cantidad"/>
                    <field name="precio_unitario"/>
                    <field name="impuesto"/>
                    <field name="total"/>
                </tree>
            </field>
        </record>

        <!-- ACCION CLICK QUE MUESTRA MENU -->
        <record model="ir.actions.act_window" id="inventario.detalle_presupuesto_action_window">
            <field name="name">Listado de detalles de presupuestos</field>
            <field name="res_model">inventario.detalle_presupuesto</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- ACCION SERVER -->
        <record model="ir.actions.server" id="inventario.detalle_presupuesto_action_server">
            <field name="name">detalle presupuesto server</field>
            <field name="model_id" ref="model_inventario_detalle_presupuesto"/>
            <field name="state">code</field>
            <field name="code">

        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
            </field>
        </record>

        <!-- RAIZ INVENTARIO -->
        <menuitem name="inventario" id="inventario.menu_root"/>

        <!-- MENU DETALLE PRESUPUESTO -->
        <menuitem name="detalle_presupuesto" id="inventario.menu_detalle_presupuesto" parent="inventario.menu_root" action="inventario.detalle_presupuesto_action_window"/>

    </data>
</odoo>
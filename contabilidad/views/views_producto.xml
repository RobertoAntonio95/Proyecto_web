<odoo>
    <data>

        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="contabilidad.producto_list">
            <field name="name">Lista de productos</field>
            <field name="model">contabilidad.producto</field>
            <field name="arch" type="xml">
                <tree>

                    <field name="nombre"/>
                    <field name="detalle"/>
                    <field name="precio"/>

                </tree>
            </field>
        </record>

        <!-- actions opening views on models
        que va a pasar cuando ejecute el menú -->
        <record model="ir.actions.act_window" id="contabilidad.producto_action_window">
            <field name="name">Listado de productos</field>
            <field name="res_model">contabilidad.producto</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- server action to the one above -->
        <record model="ir.actions.server" id="contabilidad.producto_action_server">
            <field name="name">producto server</field>
            <field name="model_id" ref="model_contabilidad_producto"/>
            <field name="state">code</field>
            <field name="code">

                <!-- accion del servidor -->
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
            </field>
        </record>

        <!-- Menú raiz contabilidad -->
        <menuitem name="contabilidad" id="contabilidad.menu_root"/>

        <!-- menú item de producto -->
        <menuitem name="producto" id="contabilidad.menu_producto" parent="contabilidad.menu_root" action="contabilidad.producto_action_window"/>

    </data>
</odoo>